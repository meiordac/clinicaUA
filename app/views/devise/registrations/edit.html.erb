<h2>Editar <%= resource_name.to_s.humanize %></h2>
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => 'form-vertical' }) do |f| %>
  <%= f.error_notification %>
  <%= display_base_errors resource %>
  <%= f.input :name, :autofocus => true %>
  <%= f.input :email, :required => true %>
  <%= f.input :password, :autocomplete => "off", :hint => "Dejalo en blanco si no desear modificarlo", :required => false %>
  <%= f.input :password_confirmation, :required => false %>
  <%= f.input :current_password, :hint => "Necesitamos tu contraseÃ±a para confirmar los cambios", :required => true %>
  <%= f.button :submit, 'Update', :class => 'btn-primary' %>
<% end %>
<h3>Cancelar mi cuenta</h3>
<p>No contento? <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Seguro?" }, :method => :delete %>.</p>
<%= link_to "Back", :back %>
