<%- model_class = Employee -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><% model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:FirstName) %></th>
      <th><%= model_class.human_attribute_name(:LastName) %></th>
      <th><% model_class.human_attribute_name(:Adress) %></th>
      <th><% model_class.human_attribute_name(:Phone) %></th>
      <th><% model_class.human_attribute_name(:Function) %></th>
      <th><% model_class.human_attribute_name(:MaritalStatus) %></th>
      <th><% model_class.human_attribute_name(:Academicformation) %></th>
      <th><% model_class.human_attribute_name(:intNumberOfChildren) %></th>
      <th><% model_class.human_attribute_name(:Religion) %></th>
      <th><% model_class.human_attribute_name(:SpouseName) %></th>
      <th><% model_class.human_attribute_name(:OccupationSpouse) %></th>
      <th><% model_class.human_attribute_name(:AssistancetoTraining) %></th>
      <th><% model_class.human_attribute_name(:HireDate) %></th>
      <th><% model_class.human_attribute_name(:SettlementDate) %></th>
      <th><% model_class.human_attribute_name(:DeliveryInUniformDate) %></th>
      <th><% model_class.human_attribute_name(:ProtectiveEquipmentDeliveryDate) %></th>
      <th><% model_class.human_attribute_name(:Permissions) %></th>
      <th><% model_class.human_attribute_name(:DateTimeHolidays) %></th>
      <th><% model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><% link_to employee.id, employee_path(employee) %></td>
        <td><%= employee.FirstName %></td>
        <td><%= employee.LastName %></td>
        <td><% employee.Adress %></td>
        <td><% employee.Phone %></td>
        <td><% employee.Function %></td>
        <td><% employee.MaritalStatus %></td>
        <td><% employee.Academicformation %></td>
        <td><% employee.intNumberOfChildren %></td>
        <td><% employee.Religion %></td>
        <td><% employee.SpouseName %></td>
        <td><% employee.OccupationSpouse %></td>
        <td><% employee.AssistancetoTraining %></td>
        <td><% employee.HireDate %></td>
        <td><% employee.SettlementDate %></td>
        <td><% employee.DeliveryInUniformDate %></td>
        <td><% employee.ProtectiveEquipmentDeliveryDate %></td>
        <td><% employee.Permissions %></td>
        <td><% employee.DateTimeHolidays %></td>
        <td><% l employee.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_employee_path(employee), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      employee_path(employee),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_employee_path,
            :class => 'btn btn-primary' %>
